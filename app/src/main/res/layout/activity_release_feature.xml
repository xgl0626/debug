<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ReleaseFeatureActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_common_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="返回"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <EditText
        android:id="@+id/appCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_text_back_ground"
        android:maxLines="8"
        android:padding="16dp"
        android:hint="在这里写下你想问的问题"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="价格：20元"
        android:textColor="@color/blueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2021-04-12 19:33"
        android:textColor="@color/blueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_android"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_btn_select"
        android:gravity="center"
        android:padding="2dp"
        android:text="Android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_swift"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_btn_unselcet"
        android:gravity="center"
        android:text="Swift"
        app:layout_constraintStart_toStartOf="@+id/tv_py"
        app:layout_constraintTop_toBottomOf="@+id/tv_py" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_py"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_btn_unselcet"
        android:gravity="center"
        android:text="Python"
        app:layout_constraintStart_toStartOf="@+id/tv_cpp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cpp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cpp"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_btn_unselcet"
        android:gravity="center"
        android:text="C++"
        app:layout_constraintStart_toStartOf="@+id/tv_android"
        app:layout_constraintTop_toBottomOf="@+id/tv_android" />

    <Button
        android:id="@+id/btn_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_unselcet"
        android:text="发布"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_swift" />

</androidx.constraintlayout.widget.ConstraintLayout>