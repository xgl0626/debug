<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_common_toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="个人信息"
        app:titleTextColor="@color/black" />

    <EditText
        android:id="@+id/et_data_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:autoSizeMaxTextSize="15dp"
        android:background="@color/white"
        android:hint="  姓名"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/et_data_sign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/et_data_sign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:autoSizeMaxTextSize="15dp"
        android:background="@color/white"
        android:hint="  简介"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/et_data_qq"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_data_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:autoSizeMaxTextSize="15dp"
        android:background="@color/white"
        android:hint="  qq"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/et_data_phone_number"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_data_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="440dp"
        android:autoSizeMaxTextSize="15dp"
        android:background="@color/white"
        android:hint="  tel"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt_data_setData"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/shape_activity_login_button"
        android:text="编辑"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_data_phone_number" />
</androidx.constraintlayout.widget.ConstraintLayout>